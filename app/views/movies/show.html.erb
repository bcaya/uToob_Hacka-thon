  <h1><%= @movie.title %></h3>
  <h3><%= @movie.genre %></h3>
  <iframe src="<%= @movie.trailer %>"></iframe>
  <br />
  <p><%= @movie.description %></p>
  <p><%= @movie.duration %></p>
  
  <%= link_to 'Add Comment', movie_comments_path(@movie) %> 
  <hr />

  <% @movie.comments.each.with_index do |comment, index| %>
  <p><%= @user.email %></p>
  <p><%= comment.body %></p>
  <p>Posted at <%= comment.created_at %></p>
  <hr>
  <% end %>
